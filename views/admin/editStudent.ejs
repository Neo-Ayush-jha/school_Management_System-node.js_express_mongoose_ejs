                            </form>
                    </div>
                    <div class="col-8">
                        
                            
                           
                        <% student.forEach(val=>{ %>
                            <% if (student[0].status == "0") { %>
                                <a href="/admin/approve-student/<%=val._id %>" class="btn btn-success">Approve Student</a>
                                <!-- <a href="/admin/new-admission" class="btn btn-info">New Student</a> -->
                            <% } else { %>
                                        
                                <a href="/admin/Pass-out-student/<%=val._id %>" class="btn btn-warning">Old Student</a>
                            <% }  %>
                        <% }); %> 
                    </div>
