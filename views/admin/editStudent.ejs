                                            <input type="number" , name="age" , value="<%= student[0].age %>"
                                                class="form-control" readonly>
                                        </div>
                                        <!-- /.form-group -->
                                    </div>
                                    <!-- /.col -->
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label for="">DOB</label>
                                            <input type="text" , name="dob" , value="<%= student[0].dob %>"
                                                class="form-control" readonly>
                                        </div>
                                    </div>
                                    <!-- /.form-group -->
                                </div>
                                <div class="row">
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label for="">gender</label>
                                            <input type="text" , name="gender" value="<%= student[0].gender %>"
                                                class="form-control" readonly>
                                        </div>
                                        <!-- /.form-group -->
                                    </div>
                                    <!-- /.col -->
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label for="">class</label>
                                            <input type="text" , name="class" , value="<%= student[0].course_id.Class_name %>"
                                                class="form-control" readonly>
                                        </div>
                                    </div>
                                    <!-- /.form-group -->
                                </div>
                                <div class="row">
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label for="">mobile</label>
                                            <input type="number" , name="mobile" , value="<%= student[0].mobile %>"
                                                class="form-control" readonly>
                                        </div>
                                        <!-- /.form-group -->
                                    </div>
                                    <!-- /.col -->
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label for="">email</label>
                                            <input type="email" , name="email" , value="<%= student[0].email %>"
                                                class="form-control" readonly>
                                        </div>
                                    </div>
                                    <!-- /.form-group -->
                                </div>
                                <div class="row">
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label for="">password</label>
                                            <input type="password" , name="password" , value="<%= student[0].password %>"
                                                class="form-control" readonly>
                                        </div>
                                        <!-- /.form-group -->
                                    </div>
                                    <!-- /.col -->
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label for="">status</label>
                                            <input type="status" , name="status" , value="<%= student[0].status %>"
                                                class="form-control" readonly>
                                        </div>
                                    </div>
                                    <!-- /.form-group -->
                                </div>
                                <div class="row">
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label for="">roll</label>
                                            <input type="roll" , name="roll" , value="<%= student[0].roll %>"
                                                class="form-control" >
