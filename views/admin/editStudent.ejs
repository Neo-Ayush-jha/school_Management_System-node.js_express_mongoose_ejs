                                        <input type="text" , name="image" value="<%= student[0].image %>" 
                                            placeholder="Pleace enter Class image"  class="form-control" readonly> 
                                            
                                        </div>
                                       
                                      </div>
                                      </div>

                                    <!-- /.col -->
                                    <div class="row">
                                          <div class="form-group col">
                                            <label for="">address</label>
                                            <input type="text" , name="address" , value="<%= student[0].address %>" class="form-control" readonly>
                                          </div>
                                      </div>
                                    
