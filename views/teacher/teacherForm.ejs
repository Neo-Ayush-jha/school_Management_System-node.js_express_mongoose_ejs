<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher || panal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <%- include('base') -%>

        <div class="container mt-3">
            <div class="row">
                <div class="col-8 mx-auto">
                    <div class="card shadow">
                        <div class="card-body">
                            <h2 class="fst-4 text-center">Enter teacher Details</h2>
                            <hr>
                            <form action="/teacher/teacher-form" method="post">
                                <div class="row">
                                    <div class="mb-3 col">
                                        <label for="">Teacher name</label>
                                        <input type="text" , name="t_name" class="form-control">
                                    </div>
                                    <div class="mb-3 col">
                                        <label for="">Age</label>
                                        <input type="number" , name="t_age" class="form-control">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="mb-3 col">
                                        <label for="">Mobile</label>
                                        <input type="number" , name="t_mobile" class="form-control">
                                    </div>
                                    <div class="mb-3 col">
                                        <label for="">Salary Demand</label>
                                        <input type="text" , name="t_salary" class="form-control">
                                    </div>
                                    <div class="mb-3 col">
                                        <label for="">email</label>
                                        <input type="email" , name="t_email" class="form-control">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="mb-3 col">
                                        <label for="">Dob</label>
                                        <input type="date" , name="t_dob" class="form-control">
                                    </div>
                                    <div class="mb-3 col">
                                        <label for="">Course</label>
                                        <select name="course_id" , id="" class="form-select">
                                            <% course.forEach(val=>{ %>
                                                <!-- <td><%=val.address %></td> -->
                                                <option value="<%= val._id  %>">
                                                    <%=val.Course_name %>
                                                </option>
                                                <% }); %>
                                        </select>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="mb-1 col">
                                        <!-- <label for="">gender</label>
                                    <input type="text", name="t_gender" class="form-control"> -->
                                        <div class="row" style="width: 300px;margin-left:5px;">
                                            <label for="">Gender</label>
                                            <div class="mb-1 col px-3 rounded py-1 d-flex border border-1">
                                                <div class="m-1">
                                                    <input type="radio" name="t_gender" value="male"
                                                        class="me-2 form-check-input me-1">
                                                    <label for="" class="me-2 form-check-label">Male</label>
                                                </div>
                                                <div class="m-1">
                                                    <input type="radio" name="t_gender" value="female"
                                                        class="me-2 form-check-input me-1">
                                                    <label for="" class="me-2 form-check-label">Female</label>
                                                </div>
                                                <div class="m-1">
                                                    <input type="radio" name="t_gender" value="other"
                                                        class="me-2 form-check-input me-1">
                                                    <label for="" class="me-2 form-check-label">Other</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-1 col">
                                        <label for="">Password</label>
                                        <input type="password" , name="t_password" class="form-control">
                                    </div>
                                </div>
                                <div class="row">
                                   
                                    <div class="mb-3 col">
                                        <label for="">Address</label>
                                        <input type="text" , name="t_address" class="form-control">
                                    </div>
                                </div>
                                <div class="mb-3 col">
                                    <input type="submit" , name="submit" class="btn btn-success w-100">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>